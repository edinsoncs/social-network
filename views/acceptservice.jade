  body

    header.menuViainti.bgHeader(data-role='header')
      include header-principal.jade
      nav.linkMenu
        ul.contMenu
          li.liMenu
            a.aLinkMenu(href='#') Inicio
          li.liMenu.jsHot
            a.aLinkMenu(href='../hoteles/') Hoteles
          li.liMenu.jsRest
            a.aLinkMenu(href='../restaurantes/') Restaurantes
          li.liMenu
            a.aLinkMenu(href='../vuelos/') Viajes
    main
     section.contenidoPrincipal.serviceSuccess
      figure.serviceSuccess__Figure
       img(src="../uploads/services/#{data.Imagen}")
      header.serviceSuccess__Header
       h2.title
        | Se agrego correctamente su restaurante 
        span.showNameService #{data.Nombre}
       - var name = data.Nombre
       - var encode = encodeURIComponent(name)
       - var letter = encode.toLowerCase()
       - var replace = letter.replace('%20', '-')
       a.link(href="../restaurantes/show/#{replace}=?id=#{data._id}")
