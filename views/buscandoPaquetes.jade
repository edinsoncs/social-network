doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(name='robots', content='nofollow')
    meta(name='description', content='Vuelos economicos, vuelos en linea, comprar vuelos en linea, vuelos al mejor precio, vuelos desde argentina peru, vuelos en linea')
    title #{title}
    link(rel='stylesheet', href='../stylesheets/normalize.css')
    link(rel='stylesheet', href='../stylesheets/viainti.css')
    script(src='http://code.jquery.com/jquery-1.11.3.min.js')
   
    script(src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.11/jquery-ui.js')
    script(src='../javascripts/viaintibackend.js')
  body
    header.menuViainti.bgHeader(data-role='header')
      .header
        .menuViaintiLeft
          figure.menuViainti_Logo.margen.enLinea
            img.logoHeader(src='../images/logo.png', alt='Viainti tu libro viajero')
       nav.linkMenu
        ul.contMenu
          li.liMenu
            a.aLinkMenu(href='/') Inicio
          li.liMenu
            a.aLinkMenu.aMenuHover(href='/paquetes') Paquetes
          li.liMenu
            a.aLinkMenu(href='#') Viajes
          li.liMenu
            a.aLinkMenu(href='viajes.html') Cruceros
          li.liMenu
            a.aLinkMenu(href='#') Novedades
          ul.contMenuSociales
            li.ListSociales
              iframe(src="//www.facebook.com/plugins/like.php?href=https%3A%2F%2Fwww.facebook.com%2Fviainti&amp;send=false&amp;layout=button_count&amp;width=140&amp;show_faces=false&amp;font&amp;colorscheme=light&amp;action=like&amp;height=21", scrolling="no", frameborder="0", style="border:none; overflow:hidden; width:78px; height:21px;", allowtransparency="true")
    main
        section.contenidoPrincipal
          header.subMenuViajes
            ul.subMenuViajes--Cont
              li.listSubMenuViajes
                a.link(href="/") 
                  | Inicio
              li.listSubMenuViajes
                a.link(href="/paquetes")
                  | Paquetes Turisticos
          section.contenidoVuelos
            section.contenidosVuelos--Iz
              section.contenidoPaquetes
                form.searchPaquetes
                  header.searchPaquetes--Header
                    h2.title
                      | Encuentra tu paquete
                  fieldset.searchPaquetes--Fieldset
                    label.fieldset--Title
                      | Ciudad de origen
                    input(class="inputPaquetes", type="text", placeholder="Donde se encuentra?")

                  fieldset.searchPaquetes--Fieldset
                    label.fieldset--Title
                      | Ciudad de destino
                    input(class="inputPaquetes", type="text", placeholder="Donde quiere ir?")
                  fieldset.searchPaquetes--Fieldset
                    label.fieldset--Title
                      | Fechas disponibles
                    select.optionsPaquetes.inputPaquetes
                      option(value="Noviembre")
                        | Noviembre
                      option(value="Diciembre")
                        | Diciembre
                      option(value="Enero")
                        | Enero
                  fieldset.searchPaquetes--Fieldset
                    input(class="enviarPaquetes" type="submit", value="Buscar")

            aside.contenidosVuelos--De
              div.contenidosVuelos--Separador
              div.contenidosVuelos--Circle
              section.contenidos--Vuelos--Cont
                h2 #{name}

                
                      
