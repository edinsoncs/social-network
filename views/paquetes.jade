doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(name='robots', content='nofollow')
    meta(name='description', content='Vuelos economicos, vuelos en linea, comprar vuelos en linea, vuelos al mejor precio, vuelos desde argentina peru, vuelos en linea')
    title #{title}
    link(rel='stylesheet', href='../stylesheets/normalize.css')
    link(rel='stylesheet', href='../stylesheets/viainti.css')
    script(src='https://code.jquery.com/jquery-1.11.3.min.js')
   
    script(src="/socket.io/socket.io.js")  
   
    script(src='../javascripts/app-via.js')
    script(src='../javascripts/viaintifrontend.js')
    script(src='../javascripts/app-via2.js')
  body
    include header-vuelosPaquetes.jade
    main
        section.contenidoPrincipal
          header.subMenuViajes
            ul.subMenuViajes--Cont
              li.listSubMenuViajes
                a.link(href="/libro/") 
                  | Inicio
              li.listSubMenuViajes
                a.link(href="/paquetes")
                  | Paquetes Turisticos
          section.contenidoVuelos
            section.contenidosVuelos--Iz
              section.contenidoPaquetes
                form.searchPaquetes
                  header.searchPaquetes--Header
                    h2.title
                      | Encuentra tu paquete
                  fieldset.searchPaquetes--Fieldset
                    label.fieldset--Title
                      | Ciudad de origen
                    input(class="inputPaquetes", type="text", placeholder="Donde se encuentra?")

                  fieldset.searchPaquetes--Fieldset
                    label.fieldset--Title
                      | Ciudad de destino
                    input(class="inputPaquetes", type="text", placeholder="Donde quiere ir?")
                  fieldset.searchPaquetes--Fieldset
                    label.fieldset--Title
                      | Fechas disponibles
                    select.optionsPaquetes.inputPaquetes
                      option(value="Noviembre")
                        | Noviembre
                      option(value="Diciembre")
                        | Diciembre
                      option(value="Enero")
                        | Enero
                  fieldset.searchPaquetes--Fieldset
                    input(class="enviarPaquetes" type="submit", value="Buscar")

            aside.contenidosVuelos--De
              div.contenidosVuelos--Separador
              div.contenidosVuelos--Circle
              section.contenidos--Vuelos--Cont
               each pa in paquetes
                article.contenidos--Vuelos--PostPaquetes
                 figure.PostPaquetes--Figure
                  img(class="PostPaquetes--Img", src="../uploads/services/#{pa.Imagen}")
                 div.PostPaquetes--Info
                  div.InfoPaquetes--Cont
                   h2.Info--Precio.margen
                    | AR $#{pa.Precio}
                  div.InfoPaquetes--Cont
                   h2.Info--Precio.margen
                    i(class="fa fa-map-marker")
                    | #{pa.Paises}
                 div.PostPaquetes--Date
                  div.InfoPaquetes--Data
                   span.InfoPaquetes--Data--Ico
                    i(class="fa fa-calendar-o")
                   span.InfoPaquetes--Data--Title
                    | De: #{pa.DateIda}
                  div.InfoPaquetes--Data
                   span.InfoPaquetes--Data--Ico
                    i(class="fa fa-calendar-o")
                   span.InfoPaquetes--Data--Title
                    | Hasta: #{pa.DateLlegada}
                  button.btn--sendArtilce
                   - var titulo = pa.Titulo
                   - var convert = titulo.toLowerCase()
                   - var isurl = encodeURIComponent(convert)
                   - var es = isurl.replace('%20', '-')
                   - var esTwo = es.replace('%20', '-')
                   - var replaceAll = esTwo.replace('%20', '-')
                   -var replaceAllTwo = replaceAll.replace('%20', '-')
                   - var replaceAllTree = replaceAllTwo.replace('%20', '-')
                   - var replaceAllFour = replaceAllTree.replace('%20', '-')
                   a(href="s/"+replaceAllFour+"?id=#{pa._id}")
                    | Ver Paquete
              div.contenidosVuelos--Pagination
               ul.contenidosVuelos--Pagination--Ul
                li.List--Title.linea.toPaginatorPrevius
                li.List--Title.linea.toPaginatorNext
    
                
                      
