doctype html
head
  meta(charset='UTF-8')
  meta(name='description', content='Viainti')
  title Viainti
  link(rel='stylesheet', href='../../stylesheets/normalize.css')
  link(rel='stylesheet', href='../../stylesheets/viainti.css')
  <link href='https://api.mapbox.com/mapbox.js/v2.3.0/mapbox.css' rel='stylesheet' />

  script(src="https://api.mapbox.com/mapbox.js/v2.3.0/mapbox.js")

  script(src='https://code.jquery.com/jquery-1.11.2.min.js')
  script(src='../../javascripts/restaurantes.js')
  script(src='../../javascripts/viaintifrontend.js')

  
header.menuViainti.bgHeader(data-role='header')
  include header-hotelesprofile
  nav.linkMenu
    ul.contMenu
      li.liMenu
        a.aLinkMenu(href='../../libro/') Inicio
      li.liMenu
        a.aLinkMenu(href='../../hoteles/') Hoteles
      li.liMenu
        a.aLinkMenu(href='../../restaurantes/') Restaurantes
      li.liMenu
        a.aLinkMenu(href='../../vuelos/') Viajes

main
  section.contenidoPrincipal
    section.cont_Principal_Dashboard
      article.Dashboard_Left--Hotel
        .Dashboard_Left--Hotel--Cont--Top
          figure.DashboardHotel.margen
            img.imgHotel(src='../../uploads/services/#{fotoRest}', alt='')
          .DashboardHotel--Acerca
            h4.Acerca--Title.margen #{nombreRest}
          figpcation.DashboardHotelDescription
            | #{destRest}
          .DashboardHotel--Acerca--City
            h4.Acerca--City--Title.margen Ubicación:
            .Acerca--City--Title--Name
              p.City--Name.margen #{ubiRest}
            h4.Acerca--City--Title.margen Dirección:
            .Acerca--City--Title--Name
              p.City--Name.margen.jsDireccion 
                | #{direRest}
          .DashboardHotel--Acerca--Mapa
            figure.Mapa.margen#map(data-latitud="#{latRest}", data-longitud="#{lonRest}")
  
      article.Dashboard_Center
        div.DashboardUtils
            .DashboardUtils--Phone
              header.DashboardUtils--Phone--Header
                h2.title
                  | Llamalo
                div.close.jsCloseUtils
                  | &#215
              div.DashboardUtils--Phone--Show
                h2.Show
                  i.fa.fa-phone-square
                  | #{tel}
        article.Dashboard_Welcome

          form(class='sendHotel', id="formHotel")
            figure.Dashboard_Map.fijo.margen
              img(src='../../uploads/services/#{coverRest}', alt='')
            .Dashboard_Post
              textarea.Post_Home.noBorder(name='', id='textData', cols='', rows='', placeholder='Escribelo a @#{nombreRest}')
          .Dashboard_Post_Send
            .DashBoard_Send_Utils.flotaRight
              //.Send_Ico.enLinea
                .Send_Ico_Geo.enLinea
                  i.fa.fa-map-marker
                .Send_Ico_Movi.enLinea
                  i.fa.fa-film
                .Send_Ico_Photo.enLinea
                  i.fa.fa-camera
              .Send_btnSubmit.enLinea
                button.btn_Post--Hotel(type="submit")
                  a.linkBlanco.pubHotel(href='#')
                    | Publicar
      
        if !posts
          div.linesNotComments
            .lineNotComments--One
            .lineNotComments--Two
            .lineNotComments--Tree
        else
          each key in posts
            article.Dashboard_Post--User
              article.Post--User
                .Post--User--Date
                  .Post--Date
                    span.name
                      | #{key.name}
                  .Post--Date
                    span.date
                      | Publicado hace 2 horas
                figure.Post--User--Foto.margen
                  img.User--Foto(src='#{key.foto}', alt='')
              article.Post--User--Txt
                p.Post--Txt.margen
                  | #{key.content}
              
        
      aside.Dashboard_Right
        .Dashboard_Right_Menu
          header.Dashboard_Right_Title
            h4.cBlancoSidebarTitle.margen
              | Servicios
          ul.Dashboard_Right_Menu
            li.list-Right--Menu
              a.link-Right--Menu(href='#')
                i.fa.fa-cutlery
                |  Nuestros Platos
            li.list-Right--Menu.jsRestPhone
              a.link-Right--Menu(href='#')
                i.fa.fa-phone-square
                |  Teléfono
            li.list-Right--Menu
              a.link-Right--Menu(href='#')
                i.fa.fa-inbox
                |  reservar ahora
       

script(src='../../javascripts/maps.js')
