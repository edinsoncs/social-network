            | es un restaurante genial y very good
          .DashboardHotel--Acerca--City
            h4.Acerca--City--Title.margen Ubicación:
            .Acerca--City--Title--Name
              p.City--Name.margen #{ubiHotel}
            h4.Acerca--City--Title.margen Dirección:
            .Acerca--City--Title--Name
              p.City--Name.margen.jsDireccion 
                | #{direHotel}
          .DashboardHotel--Acerca--Mapa
            figure.Mapa.margen#map(data-latitud="#{latHotel}", data-longitud="#{lonHotel}")
  
      article.Dashboard_Center
        article.Dashboard_Welcome
          form(class='sendHotel', id="formHotel")
            figure.Dashboard_Map.fijo.margen
              img(src='../../uploads/services/#{coverHotel}', alt='')
            .Dashboard_Post
              textarea.Post_Home.noBorder(name='', id='textData', cols='', rows='', placeholder='Escribelo a @#{nombreHotel}')
          .Dashboard_Post_Send
            .DashBoard_Send_Utils.flotaRight
              //.Send_Ico.enLinea
                .Send_Ico_Geo.enLinea
                  i.fa.fa-map-marker
                .Send_Ico_Movi.enLinea
                  i.fa.fa-film
                .Send_Ico_Photo.enLinea
                  i.fa.fa-camera
              .Send_btnSubmit.enLinea
                button.btn_Post--Hotel(type="submit")
                  a.linkBlanco.pubHotel(href='#')
                    | Publicar
      
        if !posts
          div.linesNotComments
            .lineNotComments--One
            .lineNotComments--Two
            .lineNotComments--Tree
        else
          each key in posts
            article.Dashboard_Post--User
              article.Post--User
                .Post--User--Date
                  .Post--Date
                    span.name
                      | #{key.name}
                  .Post--Date
                    span.date
                      | Publicado hace 2 horas
                figure.Post--User--Foto.margen
                  img.User--Foto(src='#{key.foto}', alt='')
              article.Post--User--Txt
                p.Post--Txt.margen
                  | #{key.content}
              //article.Post--User--Opt
                .Post--User--Cont
                  .Post--User--Like
                    .User--Like
                      .Like.enLinea
                        span.Like--Num
                          | 10
                      i.fa.fa-heart
                  .Post--User--Coment
                    .User--Coment
                      .Comment.enLinea
                        span.Comment--Num
                          | 8
                      i.fa.fa-comments
                  .Post--User-Shared
